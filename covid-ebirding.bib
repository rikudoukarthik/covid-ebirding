	pages = {e0172579},
	file = {Full Text PDF:C\:\\Users\\Karthik Thrikkadeeri\\Zotero\\storage\\FKD49SNS\\Pocock et al. - 2017 - The diversity and evolution of ecological and envi.pdf:application/pdf;Snapshot:C\:\\Users\\Karthik Thrikkadeeri\\Zotero\\storage\\SRMA2VP9\\article.html:text/html},
