	journal = {International Journal of Environmental Research and Public Health},
	author = {Randler, Christoph and Tryjanowski, Piotr and Jokimäki, Jukka and Kaisanlahti-Jokimäki, Marja-Liisa and Staller, Naomi},
	month = jan,
	year = {2020},
	note = {Number: 19
Publisher: Multidisciplinary Digital Publishing Institute},
	keywords = {citizen science, behavioral changes, birding, birdwatching, leisure, recreation},
	pages = {7310},
